<%- if controller_name != 'sessions' %>
  <%= link_to t('devise.views.login'), new_session_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to t('devise.views.sign_up'), new_registration_path(resource_name) %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to t('devise.views.forgot_your_password'), new_password_path(resource_name) %><br />
<% end %>
