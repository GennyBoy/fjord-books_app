<h2><%= "#{resource.model_name.human} #{t('views.common.edit')}" %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(<%= t('views.common.optional_input_description') %>)</i><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= t('views.common.input_minimum_characters', number: @minimum_password_length) %></em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :post_code %><br />
    <%= f.text_field :post_code, autocomplete: "post-code" %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_area :address, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :self_introduction %><br />
    <%= f.text_area :self_introduction, autocomplete: "self-introduction" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(<%= t('devise.registrations.require_current_password_when_update') %>)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('views.common.update') %>
  </div>
<% end %>

<h3><%= t('devise.registrations.cancel_my_account') %></h3>

<p><%= t('views.common.unhappy_confirm') %><%= button_to t('devise.registrations.cancel_my_account'), registration_path(resource_name), data: { confirm: t('views.common.delete_confirm') }, method: :delete %></p>

<%= link_to t('views.common.back'), :back %>
